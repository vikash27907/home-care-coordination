<%- include("../partials/head", { title }) %>

<section class="ig-auth-shell">
  <div class="ig-auth-card">
    <h1>Forgot Password</h1>
    <p>Enter your account email to receive a 6-digit OTP.</p>

    <form action="/forgot-password" method="POST" class="ig-auth-form" novalidate>
      <label for="email">Email</label>
      <input
        id="email"
        name="email"
        type="email"
        value="<%= prefillEmail || '' %>"
        placeholder="you@example.com"
        autocomplete="email"
        required
      />

      <button type="submit" class="ig-auth-btn">Send OTP</button>
    </form>

    <p class="ig-auth-link-row">Remember password? <a href="/login">Back to login</a></p>
  </div>
</section>

<style>
.ig-auth-shell {
  min-height: calc(100vh - 120px);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24px 16px;
  background: radial-gradient(circle at top, #f2f2f2 0%, #ffffff 60%);
}

.ig-auth-card {
  width: 100%;
  max-width: 420px;
  background: #ffffff;
  border: 1px solid #dbdbdb;
  border-radius: 18px;
  padding: 28px 24px;
  box-shadow: 0 14px 30px rgba(0, 0, 0, 0.08);
}

.ig-auth-card h1 {
  margin: 0;
  font-size: 1.7rem;
  text-align: center;
  color: #111111;
}

.ig-auth-card p {
  margin: 8px 0 20px;
  text-align: center;
  color: #666666;
}

.ig-auth-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.ig-auth-form label {
  font-size: 0.9rem;
  color: #222222;
  font-weight: 600;
}

.ig-auth-form input {
  height: 46px;
  border: 1px solid #cfcfcf;
  border-radius: 12px;
  padding: 0 14px;
  font-size: 1rem;
  outline: none;
}

.ig-auth-form input:focus {
  border-color: #111111;
  box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.08);
}

.ig-auth-btn {
  margin-top: 4px;
  height: 46px;
  border: 0;
  border-radius: 999px;
  background: #111111;
  color: #ffffff;
  font-weight: 700;
  cursor: pointer;
}

.ig-auth-btn:hover {
  background: #000000;
}

.ig-auth-link-row {
  margin: 16px 0 0;
  font-size: 0.92rem;
}

.ig-auth-link-row a {
  color: #111111;
  text-decoration: none;
  font-weight: 600;
}

@media (max-width: 480px) {
  .ig-auth-card {
    padding: 22px 16px;
    border-radius: 14px;
  }
}
</style>

<%- include("../partials/footer") %>
