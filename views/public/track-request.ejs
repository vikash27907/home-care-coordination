<%- include("../partials/head", { title }) %>

<section class="form-section">
  <h1>Track Your Request</h1>
  <p>Enter your Request ID to view the current status of your care request.</p>

  <form method="GET" action="/track-request" class="form-grid">
    <label class="full-width">
      Enter your Request ID
      <input name="requestId" type="text" placeholder="e.g., REQ-2026-123456" value="<%= locals.requestId || '' %>" required />
    </label>
    <button type="submit" class="btn primary full-width">Search</button>
  </form>

  <% if (locals.error) { %>
    <div class="alert error">
      <%= locals.error %>
    </div>
  <% } %>

  <% if (locals.request) { %>
    <hr />
    <div class="request-details">
      <h2>Request Details: <%= request.requestId %></h2>
      
      <!-- Status Badge -->
      <div class="status-section">
        <span class="status-badge status-<%= request.status.toLowerCase().replace(/\s+/g, '-') %>">
          <%= request.status %>
        </span>
      </div>
      
      <div class="details-grid">
        <div class="detail-card">
          <h3>Personal Information</h3>
          <table class="details-table">
            <tr>
              <td class="label">Full Name:</td>
              <td><%= request.fullName %></td>
            </tr>
            <tr>
              <td class="label">Email:</td>
              <td><%= request.email %></td>
            </tr>
            <tr>
              <td class="label">Phone:</td>
              <td><%= request.phoneNumber %></td>
            </tr>
            <tr>
              <td class="label">City:</td>
              <td><%= request.city %></td>
            </tr>
          </table>
        </div>
        
        <div class="detail-card">
          <h3>Service Details</h3>
          <table class="details-table">
            <tr>
              <td class="label">Service Schedule:</td>
              <td><%= request.serviceSchedule %></td>
            </tr>
            <tr>
              <td class="label">Duration:</td>
              <td><%= request.durationType || '-' %></td>
            </tr>
            <tr>
              <td class="label">Budget:</td>
              <td>
                <% if (request.budget) { %>
                  â‚¹<%= request.budget.toLocaleString('en-IN') %>
                <% } else { %>
                  -
                <% } %>
              </td>
            </tr>
            <tr>
              <td class="label">Notes:</td>
              <td><%= request.notes || '-' %></td>
            </tr>
          </table>
        </div>
        
        <div class="detail-card">
          <h3>Request Timeline</h3>
          <table class="details-table">
            <tr>
              <td class="label">Request ID:</td>
              <td><strong><%= request.requestId %></strong></td>
            </tr>
            <tr>
              <td class="label">Submitted:</td>
              <td><%= request.createdAt ? new Date(request.createdAt).toLocaleString() : '-' %></td>
            </tr>
            <tr>
              <td class="label">Last Updated:</td>
              <td><%= request.updatedAt ? new Date(request.updatedAt).toLocaleString() : (request.createdAt ? new Date(request.createdAt).toLocaleString() : '-') %></td>
            </tr>
          </table>
        </div>
      </div>
      
      <div class="action-buttons">
        <a href="/track-request" class="btn">Search Another Request</a>
      </div>
    </div>
  <% } %>
</section>

<style>
.status-section {
  margin: 20px 0;
}

.status-badge {
  display: inline-block;
  padding: 10px 20px;
  border-radius: 25px;
  font-weight: bold;
  font-size: 16px;
  color: white;
}

.status-requested {
  background: #3498db;
}

.status-waiting-for-acceptance {
  background: #9b59b6;
}

.status-agent-will-contact-you-soon {
  background: #e67e22;
}

.status-nurse-will-be-assigned-shortly {
  background: #f39c12;
}

.status-nurse-assigned {
  background: #27ae60;
}

.details-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
  margin: 20px 0;
}

.detail-card {
  background: #f9f9f9;
  padding: 20px;
  border-radius: 8px;
}

.detail-card h3 {
  margin-top: 0;
  color: #667eea;
  border-bottom: 2px solid #667eea;
  padding-bottom: 10px;
}

.details-table {
  width: 100%;
  border-collapse: collapse;
}

.details-table tr {
  border-bottom: 1px solid #eee;
}

.details-table tr:last-child {
  border-bottom: none;
}

.details-table .label {
  font-weight: bold;
  color: #666;
  padding: 8px 0;
  width: 140px;
}

.details-table td {
  padding: 8px 0;
}

.action-buttons {
  margin-top: 30px;
  text-align: center;
}

.alert.error {
  background: #fee;
  border: 1px solid #fcc;
  color: #c33;
  padding: 15px;
  border-radius: 5px;
  margin: 20px 0;
}

hr {
  margin: 30px 0;
  border: none;
  border-top: 1px solid #ddd;
}
</style>

<%- include("../partials/footer") %>
