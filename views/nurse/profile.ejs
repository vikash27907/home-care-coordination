<script>
const MASTER_SKILL_OPTIONS = <%- JSON.stringify(typeof MASTER_SKILL_OPTIONS !== "undefined" ? MASTER_SKILL_OPTIONS : []) %>;
let selectedSkills = <%- JSON.stringify(skills || []) %>;
const searchInput = document.getElementById("skillSearchInput");
const dropdown = document.getElementById("skillsDropdown");

function toggleSkillsEdit() {
  const view = document.getElementById("skillsViewMode");
  const edit = document.getElementById("skillsEditMode");

  if (edit.style.display === "none") {
    edit.style.display = "block";
    view.style.display = "none";
    renderSelectedSkills();
    if (searchInput) {
      searchInput.value = "";
    }
    if (dropdown) {
      dropdown.innerHTML = "";
      MASTER_SKILL_OPTIONS.forEach((skill) => addDropdownOption(skill));
    }
  } else {
    edit.style.display = "none";
    view.style.display = "block";
  }
}

function renderSelectedSkills() {
  const container = document.getElementById("selectedSkillsContainer");
  container.innerHTML = "";

  selectedSkills.forEach((skill, index) => {
    const chip = document.createElement("span");
    chip.className = "skill-tag";
    chip.innerHTML = `${skill} <span style="cursor:pointer; margin-left:6px;" onclick="removeSkill(${index})">&#10005;</span>`;
    container.appendChild(chip);
  });
}

function removeSkill(index) {
  selectedSkills.splice(index, 1);
  renderSelectedSkills();
}

function addDropdownOption(text, isCustom = false) {
  if (!dropdown) return;
  const item = document.createElement("div");
  item.className = "skill-option";
  item.innerText = isCustom ? `+ Add "${text}"` : text;
  item.onclick = () => addSkill(text);
  dropdown.appendChild(item);
}

if (searchInput) {
  searchInput.addEventListener("input", function () {
    if (!dropdown) return;
    const query = this.value.toLowerCase().trim();
    dropdown.innerHTML = "";

    if (!query) {
      MASTER_SKILL_OPTIONS.forEach(addDropdownOption);
      return;
    }

    const matches = MASTER_SKILL_OPTIONS.filter(skill =>
      skill.toLowerCase().includes(query)
    );

    if (matches.length > 0) {
      matches.forEach(addDropdownOption);
    } else {
      addDropdownOption(this.value, true); // custom skill
    }
  });
}

function addSkill(skill) {
  if (selectedSkills.length >= 20) {
    alert("Maximum 20 skills allowed.");
    return;
  }
  if (!selectedSkills.includes(skill)) {
    selectedSkills.push(skill);
    renderSelectedSkills();
  }
}

async function saveSkills() {
  if (selectedSkills.length < 3) {
    alert("Minimum 3 skills required.");
    return;
  }

  const res = await fetch("/nurse/profile/skills", {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({ skills: selectedSkills })
  });

  const data = await res.json();

  if (!res.ok) {
    alert(data.error || "Error updating skills.");
    return;
  }

  location.reload();
}

function toggleQualificationEdit() {
  const viewMode = document.getElementById("qualification-view-mode");
  const editMode = document.getElementById("qualification-edit-mode");

  if (viewMode.style.display === "none") {
