<%
const profileImage = nurse.profileImagePath || nurse.profileImageUrl || "";
const nurseName = String(nurse.fullName || "Nurse");
const skills = Array.isArray(nurse.skills) ? nurse.skills : [];

// Handle both old format (array of strings) and new format (array of objects)
const qualifications = Array.isArray(nurse.qualifications) ? nurse.qualifications : [];
// New format: [{ name: "GNM", certificate_url: "...", verified: false }, ...]
const qualificationsWithCerts = qualifications.filter(q => q && q.certificate_url);
const hasQualWithCert = qualificationsWithCerts.length > 0;

const workLocations = Array.isArray(nurse.workLocations) ? nurse.workLocations : [];
const aadhaar = String(nurse.aadhaarNumber || nurse.aadharNumber || "").replace(/\D/g, "");
const experienceYears = Number(nurse.experienceYears || 0);
const experienceMonths = Number(nurse.experienceMonths || 0);
const availabilityStatus = String(nurse.availabilityStatus || "").trim();
const currentAddress = String(nurse.currentAddress || nurse.address || "").trim();
const profileImageReady = Boolean(profileImage);

// Legacy certificate fields (for backward compatibility)
const tenthCertReady = Boolean(nurse.tenthCertUrl);
const highestCertReady = Boolean(nurse.highestCertUrl);

const completionChecks = [
  profileImageReady,
  Boolean(nurse.city),
  Boolean(currentAddress),
  Boolean(workLocations.length),
  Boolean(experienceYears || experienceMonths),
  Boolean(availabilityStatus),
  Boolean(skills.length),
  Boolean(qualifications.length),
  Boolean(nurse.resumeUrl),
  hasQualWithCert || (tenthCertReady && highestCertReady) // Either new or legacy format
];
const completedItems = completionChecks.filter(Boolean).length;
const profileCompletion = Math.round((completedItems / completionChecks.length) * 100);
const certsReadyForFullCompletion = hasQualWithCert || (tenthCertReady && highestCertReady);

function maskAadhaar(value) {
  if (!value || value.length < 4) return "Not provided";
  return "XXXX-XXXX-" + value.slice(-4);
}
%>

