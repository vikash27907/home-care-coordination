<%- include("../partials/head", { title }) %>

<%
// Calculate profile completion percentage
let profileCompletion = 30; // Base: basic details already provided
if (nurse.skills && nurse.skills.length > 0) profileCompletion += 15;
if (nurse.availability && nurse.availability.length > 0) profileCompletion += 10;
if (nurse.experienceYears && nurse.experienceYears > 0) profileCompletion += 10;
if (nurse.profileImagePath || nurse.profileImageUrl) profileCompletion += 10;
if (nurse.educationLevel) profileCompletion += 10;
if (nurse.aadharNumber) profileCompletion += 10;
if (nurse.resumeUrl) profileCompletion += 5;

// Helper to get display Aadhar (last 4 digits)
function getDisplayAadhar(aadhar) {
  if (!aadhar || aadhar.length < 4) return '----';
  return '****-****-' + aadhar.slice(-4);
}

// Combine skills with custom skills
const allSkills = [...(nurse.skills || []), ...(nurse.customSkills || [])];
%>

<!-- Dashboard Header with Profile Summary -->
<section class="dashboard-header">
  <div class="profile-header-container">
    <div class="profile-avatar-large">
      <% if (nurse.profileImagePath) { %>
        <img src="<%= nurse.profileImagePath %>" alt="<%= nurse.fullName %>" />
      <% } else if (nurse.profileImageUrl) { %>
        <img src="<%= nurse.profileImageUrl %>" alt="<%= nurse.fullName %>" />
      <% } else { %>
        <div class="avatar-fallback-large"><%= nurse.fullName.charAt(0).toUpperCase() %></div>
      <% } %>
    </div>
    <div class="profile-header-info">
      <h1><%= nurse.fullName %></h1>
      <p class="profile-email"><%= nurse.email %></p>
      <p class="profile-location"><%= nurse.city %><% if (nurse.workCity) { %> â€¢ <%= nurse.workCity %><% } %></p>
      <div class="profile-status">
        <span class="pill"><%= nurse.status %></span>
        <span class="availability-badge <%= nurse.isAvailable ? 'available' : 'unavailable' %>">
          <%= nurse.isAvailable ? 'Available' : 'Unavailable' %>
        </span>
      </div>
    </div>
    <div class="profile-header-actions">
      <a href="/nurse/profile/edit" class="btn primary">Update Profile</a>
    </div>
  </div>
</section>

<!-- Profile Completion Indicator -->
<div class="profile-completion">
  <div class="profile-completion-header">
    <span class="profile-completion-title">Profile Completion</span>
    <span class="profile-completion-percent"><%= profileCompletion %>%</span>
  </div>
  <div class="profile-completion-bar">
    <div class="profile-completion-fill" style="width: <%= profileCompletion %>%"></div>
  </div>
</div>

<!-- Main Profile Card -->
<section class="profile-card profile-card-clean">
  <div class="profile-card-header">
    <h2>Personal Information</h2>
  </div>
  <dl class="profile-details-grid">
    <div class="detail-item">
      <dt>Full Name</dt>
      <dd><%= nurse.fullName %></dd>
    </div>
    <div class="detail-item">
      <dt>Email</dt>
      <dd><%= nurse.email %></dd>
    </div>
    <div class="detail-item">
      <dt>Phone</dt>
      <dd><%= nurse.phoneNumber %></dd>
    </div>
    <div class="detail-item">
      <dt>City</dt>
      <dd><%= nurse.city %></dd>
    </div>
    <% if (nurse.workCity) { %>
    <div class="detail-item">
      <dt>Work City</dt>
      <dd><%= nurse.workCity %></dd>
    </div>
    <% } %>
    <% if (nurse.address) { %>
    <div class="detail-item full-width">
      <dt>Address</dt>
      <dd><%= nurse.address %></dd>
    </div>
    <% } %>
    <% if (nurse.aadharNumber) { %>
    <div class="detail-item">
      <dt>Aadhar</dt>
      <dd><%= getDisplayAadhar(nurse.aadharNumber) %></dd>
    </div>
    <% } %>
    <div class="detail-item">
      <dt>Experience</dt>
      <dd><%= nurse.experienceYears || 0 %> years</dd>
    </div>
    <% if (nurse.educationLevel) { %>
    <div class="detail-item">
      <dt>Education</dt>
      <dd><%= nurse.educationLevel %></dd>
    </div>
    <% } %>
  </dl>
</section>

<!-- Skills Section -->
<section class="profile-card profile-card-clean">
  <div class="profile-card-header">
    <h2>Skills</h2>
  </div>
  <div class="skills-tags-container">
    <% if (allSkills.length > 0) { %>
      <% allSkills.forEach(function(skill) { %>
        <span class="skill-tag"><%= skill %></span>
      <% }); %>
    <% } else { %>
      <p class="no-data">No skills added yet. Update your profile to add skills.</p>
    <% } %>
  </div>
</section>

<!-- Availability Section -->
<section class="profile-card profile-card-clean">
  <div class="profile-card-header">
    <h2>Availability</h2>
  </div>
  <div class="skills-tags-container">
    <% if (nurse.availability && nurse.availability.length > 0) { %>
      <% nurse.availability.forEach(function(avail) { %>
        <span class="availability-tag"><%= avail %></span>
      <% }); %>
    <% } else { %>
      <p class="no-data">No availability set. Update your profile to add availability.</p>
    <% } %>
  </div>
</section>

<!-- Documents Section -->
<section class="profile-card profile-card-clean">
  <div class="profile-card-header">
    <h2>Documents</h2>
  </div>
  <div class="documents-grid">
    <div class="document-item">
      <div class="document-icon">ðŸ“„</div>
      <div class="document-info">
        <dt>Resume</dt>
        <% if (nurse.resumeUrl) { %>
          <dd><a href="<%= nurse.resumeUrl %>" target="_blank" class="document-link">View Resume</a></dd>
        <% } else { %>
          <dd class="no-document">Not uploaded</dd>
        <% } %>
      </div>
    </div>
    <div class="document-item">
      <div class="document-icon">ðŸŽ“</div>
      <div class="document-info">
        <dt>Certificate</dt>
        <% if (nurse.certificateUrl) { %>
          <dd><a href="<%= nurse.certificateUrl %>" target="_blank" class="document-link">View Certificate</a></dd>
        <% } else { %>
          <dd class="no-document">Not uploaded</dd>
        <% } %>
      </div>
    </div>
  </div>
</section>

<!-- Referral Section -->
<section class="profile-card profile-card-clean">
  <div class="profile-card-header">
    <h2>Referral & Earnings</h2>
  </div>
  <dl class="profile-details-grid">
    <div class="detail-item">
      <dt>Referral Code</dt>
      <dd><code class="referral-code"><%= nurse.referralCode %></code></dd>
    </div>
    <div class="detail-item">
      <dt>Referral Link</dt>
      <dd><code class="referral-link"><%= referralLink %></code></dd>
    </div>
    <div class="detail-item">
      <dt>Total Earnings</dt>
      <dd class="earnings-amount">â‚¹<%= referralTotal.toFixed(2) %></dd>
    </div>
  </dl>
  
  <% if (referredNurses.length > 0) { %>
  <div class="referred-nurses-section">
    <h3>Referred Nurses (<%= referredNurses.length %>)</h3>
    <div class="table-shell">
      <table>
        <thead>
          <tr>
            <th>Nurse</th>
            <th>Status</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% referredNurses.forEach(function(item) { %>
          <tr>
            <td><%= item.fullName %></td>
            <td><span class="pill"><%= item.status %></span></td>
            <td><%= item.createdAt.slice(0, 10) %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <% } %>
</section>

<!-- Assigned Agents -->
<% if (assignedAgents.length > 0) { %>
<section class="profile-card profile-card-clean">
  <div class="profile-card-header">
    <h2>Assigned Agents</h2>
  </div>
  <div class="agents-list">
    <% assignedAgents.forEach(function(agent) { %>
    <div class="agent-item">
      <div class="agent-info">
        <dt><%= agent.name %></dt>
        <dd><%= agent.email %></dd>
        <dd class="agent-region"><%= agent.region %></dd>
      </div>
    </div>
    <% }); %>
  </div>
</section>
<% } %>

<style>
/* Profile Header Styles */
.profile-header-container {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  padding: 1.5rem;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 16px;
  border: 1px solid var(--line, #d7e4f2);
  box-shadow: var(--shadow-soft);
}

.profile-avatar-large {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  border: 3px solid var(--primary, #2563eb);
}

.profile-avatar-large img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-fallback-large {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--primary, #2563eb) 0%, #1d4ed8 100%);
  color: white;
  font-size: 2.5rem;
  font-weight: 700;
}

.profile-header-info {
  flex: 1;
}

.profile-header-info h1 {
  margin: 0 0 0.25rem 0;
  font-size: 1.75rem;
  color: var(--ink, #102a44);
}

.profile-email {
  margin: 0 0 0.25rem 0;
  color: var(--muted, #4f6880);
  font-size: 0.95rem;
}

.profile-location {
  margin: 0 0 0.5rem 0;
  color: var(--muted, #4f6880);
  font-size: 0.9rem;
}

.profile-status {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.availability-badge {
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
}

.availability-badge.available {
  background: #dcfce7;
  color: #166534;
}

.availability-badge.unavailable {
  background: #fee2e2;
  color: #991b1b;
}

.profile-header-actions {
  flex-shrink: 0;
}

/* Clean Profile Card */
.profile-card-clean {
  background: var(--surface, #ffffff);
  border: 1px solid var(--line, #d7e4f2);
  border-radius: 16px;
  padding: 1.5rem;
  margin-top: 1rem;
  box-shadow: var(--shadow-card);
}

.profile-card-header {
  margin-bottom: 1rem;
  padding-bottom: 0.75rem;
  border-bottom: 1px solid var(--line, #d7e4f2);
}

.profile-card-header h2 {
  margin: 0;
  font-size: 1.25rem;
  color: var(--ink, #102a44);
}

/* Profile Details Grid */
.profile-details-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
  margin: 0;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.detail-item.full-width {
  grid-column: 1 / -1;
}

.detail-item dt {
  font-size: 0.8rem;
  color: var(--muted, #4f6880);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.detail-item dd {
  margin: 0;
  font-size: 1rem;
  color: var(--ink, #102a44);
  font-weight: 500;
}

.referral-code, .referral-link {
  background: var(--surface-soft, #f5f9ff);
  padding: 0.35rem 0.75rem;
  border-radius: 8px;
  font-size: 0.9rem;
  border: 1px solid var(--line, #d7e4f2);
  word-break: break-all;
}

.earnings-amount {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--primary, #2563eb) !important;
}

/* Skills Tags */
.skills-tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.skill-tag {
  display: inline-flex;
  align-items: center;
  padding: 0.4rem 0.85rem;
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%);
  border: 1px solid rgba(37, 99, 235, 0.2);
  border-radius: 20px;
  font-size: 0.85rem;
  color: var(--primary-deep, #1e40af);
  font-weight: 500;
}

.availability-tag {
  display: inline-flex;
  align-items: center;
  padding: 0.4rem 0.85rem;
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(16, 185, 129, 0.05) 100%);
  border: 1px solid rgba(16, 185, 129, 0.2);
  border-radius: 20px;
  font-size: 0.85rem;
  color: #047857;
  font-weight: 500;
}

.no-data {
  color: var(--muted, #4f6880);
  font-size: 0.9rem;
  font-style: italic;
  margin: 0;
}

/* Documents Grid */
.documents-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.document-item {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  padding: 1rem;
  background: var(--surface-soft, #f5f9ff);
  border-radius: 12px;
  border: 1px solid var(--line, #d7e4f2);
}

.document-icon {
  font-size: 1.5rem;
}

.document-info {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.document-info dt {
  font-size: 0.8rem;
  color: var(--muted, #4f6880);
  font-weight: 600;
}

.document-link {
  color: var(--primary, #2563eb);
  font-weight: 500;
  text-decoration: none;
}

.document-link:hover {
  text-decoration: underline;
}

.no-document {
  color: var(--muted, #4f6880);
  font-size: 0.9rem;
}

/* Referred Nurses */
.referred-nurses-section {
  margin-top: 1.5rem;
  padding-top: 1rem;
  border-top: 1px solid var(--line, #d7e4f2);
}

.referred-nurses-section h3 {
  margin: 0 0 0.75rem 0;
  font-size: 1rem;
  color: var(--ink, #102a44);
}

/* Agents List */
.agents-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.agent-item {
  padding: 0.75rem;
  background: var(--surface-soft, #f5f9ff);
  border-radius: 10px;
  border: 1px solid var(--line, #d7e4f2);
}

.agent-info dt {
  font-weight: 600;
  color: var(--ink, #102a44);
  margin-bottom: 0.15rem;
}

.agent-info dd {
  margin: 0;
  font-size: 0.85rem;
  color: var(--muted, #4f6880);
}

.agent-region {
  font-size: 0.8rem !important;
  color: var(--primary, #2563eb) !important;
}

/* Responsive */
@media (max-width: 768px) {
  .profile-header-container {
    flex-direction: column;
    text-align: center;
  }
  
  .profile-header-actions {
    width: 100%;
  }
  
  .profile-header-actions .btn {
    width: 100%;
  }
  
  .profile-details-grid {
    grid-template-columns: 1fr;
  }
  
  .documents-grid {
    grid-template-columns: 1fr;
  }
}
</style>

<%- include("../partials/footer") %>
