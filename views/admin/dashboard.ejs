<%- include("../partials/head", { title }) %>

<section class="dashboard-header">
  <h1>Admin Dashboard</h1>
  <p>Full control center for manual coordination and approval workflows.</p>
</section>

<section class="metrics-grid">
  <article class="metric">
    <h3>Total Nurses</h3>
    <p><%= metrics.totalNurses %></p>
    <small><%= metrics.pendingNurses %> pending â€¢ <%= metrics.availableNurses %> publicly available</small>
  </article>
  <article class="metric">
