<%- include('sidebar') %>

<div class="admin-main">
  <%- include(body) %>
</div>

<style>
.admin-main {
  margin-left: 260px;
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f7ff 0%, #e8f5f9 50%, #f0fdfa 100%);
  padding: 2rem;
}

/* Medical Theme Background Pattern */
.admin-main::before {
  content: '';
  position: fixed;
  top: 0;
  left: 260px;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(0, 212, 170, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(30, 136, 229, 0.05) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.admin-main > * {
  position: relative;
  z-index: 1;
}

/* Page Header */
.page-header {
  margin-bottom: 2rem;
}

.page-header h1 {
  font-size: 1.8rem;
  color: #0a2540;
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.page-header h1 .page-icon {
  font-size: 1.5rem;
}

.page-header p {
  color: #5a7a9a;
  font-size: 1rem;
}

/* Stats Cards */
.stats-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.stat-card {
  background: white;
  border-radius: 16px;
  padding: 1.5rem;
  box-shadow: 0 4px 20px rgba(10, 37, 64, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 30px rgba(10, 37, 64, 0.12);
}

.stat-card .stat-icon {
  width: 50px;
  height: 50px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.stat-card .stat-icon.blue {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.stat-card .stat-icon.green {
  background: linear-gradient(135deg, #00d4aa 0%, #00b894 100%);
}

.stat-card .stat-icon.orange {
  background: linear-gradient(135deg, #ff9800 0%, #ff5722 100%);
}

.stat-card .stat-icon.red {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}

.stat-card .stat-value {
  font-size: 2rem;
  font-weight: 800;
  color: #0a2540;
}

.stat-card .stat-label {
  color: #5a7a9a;
  font-size: 0.9rem;
  margin-top: 0.25rem;
}

/* Action Cards Grid */
.actions-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
}

.action-card {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  text-decoration: none;
  box-shadow: 0 4px 20px rgba(10, 37, 64, 0.08);
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.action-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(10, 37, 64, 0.15);
  border-color: #00d4aa;
}

.action-card .card-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.action-card h3 {
  color: #0a2540;
  font-size: 1.2rem;
  margin-bottom: 0.5rem;
}

.action-card p {
  color: #5a7a9a;
  font-size: 0.9rem;
}

.action-card .card-badge {
  display: inline-block;
  background: #ff6b6b;
  color: white;
  font-size: 0.75rem;
  font-weight: 700;
  padding: 4px 10px;
  border-radius: 20px;
  margin-top: 0.75rem;
}

/* Search & Filter Bar */
.filter-bar {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.search-box {
  flex: 1;
  min-width: 250px;
  position: relative;
}

.search-box input {
  width: 100%;
  padding: 0.85rem 1rem 0.85rem 2.75rem;
  border: 2px solid #e0e8f0;
  border-radius: 12px;
  font-size: 0.95rem;
  background: white;
  transition: border-color 0.2s ease;
}

.search-box input:focus {
  outline: none;
  border-color: #00d4aa;
}

.search-box .search-icon {
  position: absolute;
  left: 1rem;
  top: 50%;
  transform: translateY(-50%);
  color: #5a7a9a;
}

.filter-dropdown select {
  padding: 0.85rem 1.5rem 0.85rem 1rem;
  border: 2px solid #e0e8f0;
  border-radius: 12px;
  font-size: 0.95rem;
  background: white;
  cursor: pointer;
  min-width: 150px;
}

/* Responsive */
@media (max-width: 1200px) {
  .stats-row {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .actions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .admin-main {
    margin-left: 0;
    padding: 1rem;
  }
  
  .stats-row {
    grid-template-columns: 1fr;
  }
  
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .filter-bar {
    flex-direction: column;
  }
}
</style>
