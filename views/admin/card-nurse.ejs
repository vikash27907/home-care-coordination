<%
// Card data should include: id, fullName, email, phoneNumber, city, skills, experienceYears, status, createdAt, profileImageUrl, isAvailable
const roleIcon = 'üë©‚Äç‚öïÔ∏è';
const roleLabel = 'Nurse';
%>

<div class="profile-card" onclick="window.location.href='/admin/user/view/nurse/<%= nurse.id %>'">
  <div class="card-top">
    <div class="profile-image-container">
      <% if (nurse.profileImageUrl || nurse.profileImagePath) { %>
        <img src="<%= nurse.profileImageUrl || nurse.profileImagePath %>" alt="<%= nurse.fullName %>" class="profile-img">
      <% } else { %>
        <div class="profile-img-placeholder">
          <%= nurse.fullName.charAt(0).toUpperCase() %>
        </div>
      <% } %>
      <div class="role-badge-icon"><%= roleIcon %></div>
    </div>
    
    <div class="profile-info">
      <h3 class="profile-name"><%= nurse.fullName %></h3>
      <span class="status-badge <%= nurse.status.toLowerCase() %>"><%= nurse.status %></span>
    </div>
  </div>
  
  <div class="card-details">
    <div class="detail-row">
      <span class="detail-icon">üìß</span>
      <span class="detail-value"><%= nurse.email %></span>
    </div>
    <div class="detail-row">
      <span class="detail-icon">üì±</span>
      <span class="detail-value"><%= nurse.phoneNumber %></span>
    </div>
    <div class="detail-row">
      <span class="detail-icon">üèôÔ∏è</span>
      <span class="detail-value"><%= nurse.city || 'Not specified' %></span>
    </div>
    <div class="detail-row">
      <span class="detail-icon">üíº</span>
      <span class="detail-value"><%= nurse.experienceYears || 0 %> years experience</span>
    </div>
    <div class="detail-row">
      <span class="detail-icon">üéØ</span>
      <span class="detail-value skills-count"><%= (nurse.skills || []).length %> skills</span>
    </div>
    <div class="detail-row">
      <span class="detail-icon">üìÖ</span>
      <span class="detail-value"><%= nurse.createdAt ? new Date(nurse.createdAt).toLocaleDateString('en-IN') : 'N/A' %></span>
    </div>
  </div>
  
  <div class="card-footer">
    <div class="availability-indicator <%= nurse.isAvailable ? 'available' : 'unavailable' %>">
      <span class="availability-dot"></span>
      <span><%= nurse.isAvailable ? 'Available' : 'Unavailable' %></span>
    </div>
    <span class="click-hint">Click to manage ‚Üí</span>
  </div>
</div>

<style>
.profile-card {
  background: white;
  border-radius: 20px;
  padding: 1.5rem;
  box-shadow: 0 4px 20px rgba(10, 37, 64, 0.08);
  cursor: pointer;
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.profile-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 40px rgba(10, 37, 64, 0.15);
  border-color: #00d4aa;
}

.card-top {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1.25rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid #e8f0f8;
}

.profile-image-container {
  position: relative;
  flex-shrink: 0;
}

.profile-img {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid #e8f5f9;
}

.profile-img-placeholder {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 2rem;
  font-weight: 700;
  border: 3px solid #e8f5f9;
}

.role-badge-icon {
  position: absolute;
  bottom: -2px;
  right: -2px;
  width: 28px;
  height: 28px;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.9rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
}

.profile-info {
  flex: 1;
  min-width: 0;
}

.profile-name {
  font-size: 1.1rem;
  font-weight: 700;
  color: #0a2540;
  margin: 0 0 0.4rem 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.status-badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
}

.status-badge.pending {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  color: #e65100;
}

.status-badge.approved {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
}

.status-badge.rejected {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  color: #c62828;
}

.card-details {
  margin-bottom: 1rem;
}

.detail-row {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.4rem 0;
  border-bottom: 1px solid #f0f5f8;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-icon {
  font-size: 0.9rem;
  width: 20px;
  text-align: center;
}

.detail-value {
  flex: 1;
  font-size: 0.85rem;
  color: #4a5568;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.detail-value.skills-count {
  color: #667eea;
  font-weight: 600;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 0.75rem;
  border-top: 1px solid #e8f0f8;
}

.availability-indicator {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 0.8rem;
  font-weight: 600;
}

.availability-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
}

.availability-indicator.available {
  color: #00a86b;
}

.availability-indicator.available .availability-dot {
  background: #00a86b;
  animation: pulse-green 2s infinite;
}

.availability-indicator.unavailable {
  color: #999;
}

.availability-indicator.unavailable .availability-dot {
  background: #ccc;
}

@keyframes pulse-green {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.click-hint {
  font-size: 0.75rem;
  color: #667eea;
  font-weight: 500;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.profile-card:hover .click-hint {
  opacity: 1;
}
</style>
